<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_sharpness_level_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_sharpness_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="åŒ +"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_sharpness"
        android:orientation="horizontal"
        android:padding="0.1dp">

        <View
            android:id="@+id/view_level_red"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/tip_red" />

        <View
            android:id="@+id/view_level_orange"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/tip_orange" />

        <View
            android:id="@+id/view_level_yellow"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/tip_yellow" />

        <View
            android:id="@+id/view_level_green"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/tip_green" />

        <View
            android:id="@+id/view_level_blue"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/tip_blue" />

        <View
            android:id="@+id/view_level_white"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/tip_white" />

        <View
            android:id="@+id/view_level_purple"
            android:layout_width="1dp"
            android:layout_height="16dp"
            android:background="@color/tip_purple" />

    </LinearLayout>
</LinearLayout>